<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_marginLeft="11dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="11dp"
        android:layout_marginBottom="2dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="55dp">
        <EditText
            android:background="@drawable/imgine2"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_width="280dp"
            android:layout_height="50dp" />
        <ImageButton
            android:layout_marginLeft="10dp"
            android:src="@drawable/sousuo1"
            android:layout_width="66dp"
            android:layout_height="55dp" />
    </LinearLayout>
    <ImageView
        android:background="@drawable/image2"
        android:layout_marginTop="15dp"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="11dp"
        android:layout_width="match_parent"
        android:layout_height="100dp" />
        <LinearLayout
            android:layout_marginRight="20dp"
            android:layout_marginLeft="11dp"
            android:layout_marginTop="10dp"
            android:layout_width="346dp"
            android:layout_height="60dp">
            <Button
                android:background="@drawable/yuan1"
                android:text="奶油"
                android:layout_marginLeft="26dp"
                android:layout_marginRight="46dp"
                android:textSize="16dp"
                android:textColor="#d81e06"
                android:layout_width="55dp"
                android:layout_height="55dp" />
            <Button
                android:layout_marginLeft="26dp"
                android:layout_marginRight="46dp"
                android:background="@drawable/yuan1"
                android:text="水果"
                android:textSize="16dp"
                android:textColor="#d81e06"
                android:layout_width="55dp"
                android:layout_height="55dp" />
            <Button
                android:layout_marginLeft="26dp"
                android:layout_marginRight="26dp"
                android:background="@drawable/yuan1"
                android:text="巧克力"
                android:textSize="16dp"
                android:textColor="#d81e06"
                android:layout_width="55dp"
                android:layout_height="55dp" />
        </LinearLayout>
    <TextView
        android:background="#000"
        android:layout_width="match_parent"
        android:layout_height="2dp" />
    <LinearLayout
        android:layout_marginLeft="11dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="39dp">
        <Button
            android:background="@drawable/imgine2"
            android:layout_width="55dp"
            android:text="推荐"
            android:layout_height="36dp" />
        <Button
            android:layout_marginLeft="236dp"
            android:background="@drawable/imgine2"
            android:text="更多"
            android:layout_width="55dp"
            android:layout_height="36dp" />
    </LinearLayout>
    <TableLayout
        android:paddingTop="6dp"
        android:paddingLeft="39dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="11dp"
        android:layout_marginTop="10dp"
        android:layout_width="346dp"
        android:layout_height="190dp">
        <TableRow>
            <ImageButton android:layout_width="115dp"
                android:layout_marginRight="36dp"
                android:layout_height="90dp"/>
            <ImageButton
                android:layout_height="90dp"
                android:layout_width="115dp"/>
        </TableRow>
        <TableRow>
            <ImageButton android:layout_width="115dp"
                android:layout_marginRight="36dp"
                android:layout_height="90dp"/>
            <ImageButton android:layout_height="90dp"
                android:layout_width="115dp"/>
        </TableRow>
    </TableLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <Button
            android:layout_width="106dp"
            android:text="首页"
            android:textSize="20sp"
            android:background="@drawable/imgine2"
            android:layout_height="match_parent" />
        <Button
            android:text="购物车"
            android:textSize="20sp"
            android:layout_width="190dp"
            android:background="@drawable/imgine2"
            android:layout_height="match_parent" />
        <Button
            android:text="我的"
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:background="@drawable/imgine2"
            android:layout_height="match_parent" />
    </LinearLayout>
</LinearLayout>
